{% extends "/layouts/app.twig" %}

{% block title %}Kitchens
{% endblock %}

{% block content %}
	<h1>Kitchens</h1>
	{% set kitchens = entities|first %}
	<div class="link">
		{% if user.id %}
			<a class="next" href="/kitchen/create">Create new</a>
		{% endif %}
	</div>
	<table>
		<thead>
			<tr>
				<th scope="col">Name</th>
			</tr>
		</thead>
		<tbody>
			{% for item in entities %}
				<tr class="tableContent">
					<td>
						<a href="/kitchen/show?id={{item.id}}">{{item.name}}</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
